
@{
    ViewBag.Title = "Candidate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Candidate</h2>

<div class="col-lg-12">

    <div class="form-group">
        <label class="control-label">Name</label>
        <div class="col-lg-6">

            <input type="text" id="inpName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Surname</label>
        <div class="col-lg-6">

            <input type="text" id="inpSurname" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">ID number</label>
        <div class="col-lg-6">

            <input type="text" id="inpIDNumber" class="form-control" />
        </div>
    </div>
</div>

